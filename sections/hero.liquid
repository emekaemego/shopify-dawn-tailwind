<!-- hero -->
<section class="tw-bg-black pt-0">
    <div class="tw-wrapper">
        <div
        class="tw-flex tw-flex-col-reverse md:tw-flex-row tw-justify-between tw-items-center tw-text-white"
        >
        <div class="tw-w-full md:tw-w-2/3">
            <h1
            class="tw-font-bold tw-pb-2 tw-text-3xl md:tw-text-6xl tw-text-green-600 tw-uppercase"
            >
            {{ section.settings.heading }}
            </h1>

            <div
            class="tw-flex tw-items-center tw-space-x-0 md:tw-space-x-10 tw-mb-6"
            >
            <h5 class="tw-text-4xl tw-tracking-tight tw-font-extrabold tw-text-yellow-500">
                {{ section.settings.subtitle }}
            </h5>
            
            </div>

            <p class="tw-px-0 tw-mb-14 tw-text-yellow-500 tw-w-full md:tw-w-2/3">
                {{ section.settings.description }}
            </p>
        </div>

        <div class="">
            <img
            src="{{ section.settings.image | image_url }}"
            class="tw-rounded-xl tw-mt-0 md:tw-mt-0 tw-mb-7 tw-ml-0 md:tw-ml-8"
            loading="lazy"
            width="500"
            height="500"
            alt="Get B1te now"
            />
            
        </div>
        </div>

        <div
        class="tw-flex tw-flex-col md:tw-flex-row tw-justify-between 2xl:tw-justify-center tw-items-center tw-space-x-0 md:tw-space-x-16 tw-text-white tw-pb-12"
        >

        <div class="tw-flex tw-items-center tw-space-x-6 tw-mb-6 md:tw-mb-0">
            <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="currentColor"
            class="bi bi-truck tw-text-green-600"
            viewBox="0 0 16 16"
            >
            <path
                d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
            />
            </svg>
            <div class="">Worldwide Shipping</div>
        </div>

        <div class="tw-hero-divider tw-hidden md:tw-block">&nbsp;</div>

        <div class="tw-flex tw-items-center tw-space-x-6 tw-mb-6 md:tw-mb-0">
            <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="currentColor"
            class="bi bi-phone-fill tw-text-green-600"
            viewBox="0 0 16 16"
            >
            <path
                d="M3 2a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V2zm6 11a1 1 0 1 0-2 0 1 1 0 0 0 2 0z"
            />
            </svg>
            <span>No Apps Needed!</span>
        </div>

        <div class="tw-hero-divider tw-hidden md:tw-block">&nbsp;</div>

        <div class="tw-flex tw-items-center tw-space-x-6">
            <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="currentColor"
            class="bi bi-cash-coin tw-text-green-600"
            viewBox="0 0 16 16"
            >
            <path
                fill-rule="evenodd"
                d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z"
            />
            <path
                d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z"
            />
            <path
                d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z"
            />
            <path
                d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z"
            />
            </svg>
            <span>100% Money Back Guarantee</span>
        </div>
        </div>
    </div>
</section>
<!-- End hero -->

{% schema %}
{ 
    "name": "Hero",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Hero Image"
        },
        {
            "type": "text",
            "id": "heading",
            "default": "JUST ONE BUSINESS CARD FOR ALL",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subtitle",
            "default": "Share your info with just a tap!",
            "label": "Subtitle"
        },
        {
            "type": "textarea",
            "id": "description",
            "default": "B1TE business cards are digital, with NFC technology that allows you to transfer your contact information, socials, and so much more to any smartphone with just a tap, no app needed.",
            "label": "Description"
        }
    ],
    "presets": [{
        "name": "Home Hero",
        "category": "Text"
      }]
} 
{% endschema %}
