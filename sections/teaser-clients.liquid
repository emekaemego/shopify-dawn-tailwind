{% schema %}
    { 
        "name": "Teaser",
        "max_blocks": 10,
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "default": "Teaser heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subtitle",
                "default": "Teaser subtitle",
                "label": "Subtitle"
            },
            {
                "type": "textarea",
                "id": "description",
                "default": "Teaser description",
                "label": "Description"
            }
        ],
        "blocks":[
          {
            "type": "client_image",
            "name": "Client",
            "settings": [
              {
                "id": "promo_image",
                "type": "image_picker",
                "label": "Promo image"
              },
              {
                  "type": "text",
                  "id": "alt",
                  "default": "Client name",
                  "label": "Client Name"
              }
            ]
          }
        ],
        "presets": [{
            "name": "Teaser and Client Logo",
            "category": "Text"
        }]
    } 
{% endschema %}