     <!-- Begin section -->
      <section class="tw-bg-gray-100 tw-pt-8 md:tw-pt-10">
        <div class="tw-wrapper">
          <div
            class="tw-flex tw-flex-col-reverse md:tw-flex-row tw-justify-center md:tw-justify-between tw-items-center tw-space-x-0 md:tw-space-x-14"
          >
            <!-- flex item md:w-1/2 -->
            <div class="tw-w-full tw-pt-5 md:tw-pt-0 tw-text-center md:tw-text-left">
              <h2
                class="tw-text-2xl md:tw-text-6xl tw-uppercase tw-tracking-tight tw-leading-tight tw-font-bold tw-text-black tw-pb-4 md:tw-pb-6"
              >
              {{ section.settings.heading }}
              </h2>

              <h2 class="tw-font-bold tw-pb-8 tw-text-yellow-500">
                {{ section.settings.subtitle }}
              </h2>

              <p
                class="tw-px-0 tw-mb-6 tw-pt-8 tw-leading-normal md:last:tw-leading-7 tw-text-gray-600"
              >
                {{ section.settings.description }}
              </p>
            </div>
            <!-- flex item end -->

          </div>

        <div
            class="tw-flex tw-flex-col md:tw-flex-row tw-justify-between tw-items-center tw-space-x-0 md:tw-space-x-24 tw-pt-8"
          >
            <p class="tw-uppercase tw-whitespace-nowrap tw-text-gray-600">
              <span>Our Clients</span>
            </p>
            <div class="tw-w-full md:tw-w-4/5">
              <div
                class="swiffy-slider slider-nav-autoplay slider-nav-dark slider-nav-outside-expand slider-item-show5 slider-item-snapstart slider-nav-autopause slider-nav-outside slider-nav-dark slider-nav-sm slider-nav-page tw-pt-8 tw-pb-6"
                data-slider-nav-autoplay-interval="3000"
              >
                <div class="slider-container">

                  {% for  block in section.blocks %}
                    
                  <div class="tw-client-logo-content">
                    <!-- {{ block.settings.promo_image }} -->
                    <img
                      src="{{ block.settings.promo_image | image_url: width: 100 }}"
                      loading="lazy"
                      alt="{{ block.settings.alt }}"
                    />
                  </div>

                  
                  {% endfor %}
                </div>

                <button
                  type="button"
                  class="slider-nav"
                  aria-label="Go left"
                ></button>
                <button
                  type="button"
                  class="slider-nav slider-nav-next"
                  aria-label="Go left"
                ></button>
              </div>
            </div>
          </div>






