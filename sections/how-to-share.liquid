
      <!-- Begin section -->
      <section class="tw-bg-gray-100 tw-text-gray-900 tw-py-14 md:tw-py-32">
        <div class="tw-wrapper">
          <!-- grid start -->
          <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-4 tw-gap-0 md:tw-gap-8">
            <!-- grid item start -->
            <div class="tw-col-span-4 md:tw-col-span-2">
              <div class="tw-text-center md:tw-text-left tw-pb-12">
                <h2 class="tw-h2 tw-font-bold tw-pb-8">{{ section.settings.heading }}</h2>
                <h4 class="tw-h3 tw-font-semibold tw-text-yellow-500">
                    {{ section.settings.subtitle }}
                </h4>
              </div>

              <p
                class="tw-pb-6 tw-text-center md:tw-text-left tw-font-light md:tw-font-normal"
              >
              {{ section.settings.description }}
              </p>

              <div
                class="tw-block md:tw-flex tw-text-center md:tw-text-left tw-space-x-0 md:tw-space-x-14 tw-pb-8"
              >
                <div class="tw-mb-3">
                  <p class="tw-share-how-title">B1TE TAP</p>
                  <p class="tw-share-how-item">1. Tap phone to B1TE card.</p>
                  <p class="tw-share-how-item">2. Open the notification.</p>
                </div>

                <div>
                  <p class="tw-share-how-title">B1TE SCAN</p>
                  <p class="tw-share-how-item">1. Open the camera app.</p>
                  <p class="tw-share-how-item">
                    2. Point the camera at the QR code.
                  </p>
                  <p class="tw-share-how-item">3. Open the notification.</p>
                </div>
              </div>

            </div>
            <!-- grid item end -->

            <!-- grid item start -->
            <div
              class="tw-overflow-hidden tw-mt-0 md:tw--mt-24 tw-col-span-4 md:tw-col-span-1"
            >
              <img
                src="{{ section.settings.image | image_url }}"
                loading="lazy"
                alt="Ways to share"
              />
            </div>
            <!-- grid item end -->

            <!-- grid item start -->
            <div class="tw-col-span-4 md:tw-col-span-1 tw-text-2xl tw-mt-12 md:tw-mt-0">
              <div class="tw-text-center tw-mb-8">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="28"
                  height="28"
                  fill="currentColor"
                  class="bi bi-person-lines-fill tw-text-green-600 tw-inline-block"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"
                  />
                </svg>

                <p class="tw-pt-3 tw-leading-7">
                  Add your <strong>contact</strong> <br />
                  <strong>details</strong> and
                  <strong
                    >social <br />
                    media profiles</strong
                  >
                </p>
              </div>

              <div class="tw-text-center tw-mb-8">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="28"
                  height="28"
                  fill="currentColor"
                  class="bi bi-share-fill tw-text-green-600 tw-inline-block"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5z"
                  />
                </svg>

                <p class="tw-pt-3 tw-leading-7">
                  Share any details in just <br />
                  <strong>2 seconds - no app</strong> <br />
                  required!
                </p>
              </div>

              <div class="tw-text-center tw-mb-0 md:tw-mb-8">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="28"
                  height="28"
                  fill="currentColor"
                  class="bi bi-share-fill tw-text-green-600 tw-inline-block"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"
                  />
                </svg>

                <p class="tw-pt-3 tw-leading-7">
                  Update your details <br />
                  <strong>whenever you need to</strong>
                </p>
              </div>
            </div>
            <!-- grid item end -->
          </div>
          <!-- grid end -->
        </div>
      </section>
      <!-- End section -->

{% schema %}
{ 
    "name": "How to Share",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Hero Image"
        },
        {
            "type": "text",
            "id": "heading",
            "default": "SHARE BOTH WAYS",
            "label": "Heading"
        },
        {
